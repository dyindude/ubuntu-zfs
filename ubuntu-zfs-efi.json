{
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/disks.yml",
      "inventory_file": "ansible/inventory",
      "command": "ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 DEFAULT_STDOUT_CALLBACK=yaml ansible-playbook",
      "extra_arguments": [
          "-v"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/playbook.yml",
      "inventory_file": "ansible/inventory",
      "command": "ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 DEFAULT_STDOUT_CALLBACK=yaml ansible-playbook",
      "extra_arguments": [
          "-v",
          "-e", "zfsprep_efi=true"
      ]
    },
    {
      "type": "shell",
      "inline": [
          "false #pause so we can troubleshoot build"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<down>e<wait><down><down><down><end><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "systemd.unit=multi-user.target<f10>",
        "<wait10><wait10><wait5>ubuntu<enter><enter><wait>sudo -i<enter><wait>",
        "<wait>passwd<enter>vagrant<enter>vagrant<enter><wait>",
        "apt-get update && ",
        "add-apt-repository universe && ",
        "apt-get install -y openssh-server ansible && ",
        "echo PermitRootLogin yes >> /etc/ssh/sshd_config && ",
        "service ssh restart<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 8192,
      "guest_os_type": "Ubuntu_64",
      "iso_interface": "sata",
      "hard_drive_interface": "sata",
      "sata_port_count": "5",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "http://releases.ubuntu.com/18.04/ubuntu-18.04-desktop-amd64.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "a55353d837cbf7bc006cf49eeff05ae5044e757498e30643a9199b9a25bc9a34",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-ubuntu-zfs-efi-x86_64",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--firmware", "efi" ],
        [ "modifyvm", "{{.Name}}", "--memory", "8192" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "createhd", "--format", "VDI", "--filename", "disk2.vdi", "--size", "8192" ],
        [ "createhd", "--format", "VDI", "--filename", "disk3.vdi", "--size", "8192" ],
        [ "createhd", "--format", "VDI", "--filename", "disk4.vdi", "--size", "8192" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd", "--medium", "disk2.vdi" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "3", "--type", "hdd", "--medium", "disk3.vdi" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "4", "--type", "hdd", "--medium", "disk4.vdi" ]

      ]
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-ubuntu-zfs.box",
      "type": "vagrant"
    }
  ]
}
